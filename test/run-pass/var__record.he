def Point = { x: int, y: int }

fn test_init
{
    let a: { x: int, y: int };
    a.x = 10;
    a.y = 11;

    a.x = a.y;
    a.y = a.x;

    assert! (a.x == 11);
    assert! (a.y == 11);

    let b: Point;

    b.x = 12;
    b.y = 13;

    b.x = b.y;
    b.y = b.x;

    assert! (b.x == 13);
    assert! (b.y == 13);

    ret 0;
}

fn test_copy
{
    let a = Point{ x = 10, y = 11 };
    let b = a;

    a.x = 12;
    a.y = 13;

    assert! (a.x == 12);
    assert! (a.y == 13);
    assert! (b.x == 10);
    assert! (b.y == 11);
}

fn main
{
    test_init();
    test_copy();
}
